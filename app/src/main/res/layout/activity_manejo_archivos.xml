<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ManejoArchivos">

    <TextView
        android:id="@+id/textViewManejoArchivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_border"
        android:fontFamily="@font/font_bungeeoutlineregular"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:text="@string/app_manejo_archivo"
        android:textColor="@color/rojo"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp" />

    <EditText
        android:id="@+id/editTextAreaTextoManejoArchivo"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="30dp"
        android:fontFamily="@font/font_bungeehairlineregular"
        android:textStyle="bold"
        android:textColor="@color/amarillo_verde"
        android:textColorHint="@color/pastel_yellow"
        android:background="@drawable/edittext_border"
        android:gravity="top"
        android:hint="@string/app_insert_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnGuardar_ManejoArchivos"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/amarillo_verde"
        android:layout_marginTop="40dp"
        android:background="@drawable/icon_guardar"
        android:onClick="guardarArchivos"
        android:text="@string/app_guardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextAreaTextoManejoArchivo" />

    />


</androidx.constraintlayout.widget.ConstraintLayout>